@model CoreProje.Areas.User.Models.UserEditViewModel
@{
    ViewData["Title"] = "Profil Bilgileri Düzenle";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Profil Bilgileri Düzenle</h4>
        <form class="forms-sample" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputName1">Adınız</label>
                <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="exampleInputName1">Soyadınız</label>
                <input type="text" asp-for="Surname" class="form-control" id="exampleInputName1" placeholder="Surname">
            </div>

            <div class="form-group">
                <label for="exampleInputPassword4">Şifre</label>
                <input input type="password" asp-for="Password" class="form-control" id="exampleInputPassword4" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">Şifre Tekrar</label>
                <input type="password" asp-for="PasswordConfirm" class="form-control" id="exampleInputPassword4" placeholder="PasswordConfirm">
            </div>
            <div class="form-group">
                <label>Resim Seç</label>
                <input type="file" asp-for="Picture">
             @*   <div class="input-group col-xs-12">
                    <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                    <span class="input-group-append">
                        <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                    </span>
                </div>*@
            </div>


            <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            <button class="btn btn-light">İptal</button>
        </form>
    </div>
</div>
