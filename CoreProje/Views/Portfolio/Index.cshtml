@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort">#</th>
                            <th scope="col" class="sort">Proje Adı</th>
                            <th scope="col" class="sort">Ücreti</th>
                            <th scope="col" class="sort">Tamamlanma %</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort">Düzenle</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @item.PortdolioID
                                </th>
                                <td class="budget">
                                    @item.Name
                                </td>
                                <td class="budget">
                                    @item.Price
                                </td>
                                <td class="budget">
                                    @item.value   %
                                </td>

                                <td>
                                    <a href="/Portfolio/DeletePortfolio/@item.PortdolioID" class="btn btn-sm btn-danger" id="DeleteBtn"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                                </td>
                                <td>
                                    <a href="/Portfolio/EditPortfolio/@item.PortdolioID" class="btn btn-sm btn-success">Güncelle</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="container">
                <a href="/Portfolio/AddPortfolio/" class="btn btn-primary">+ Proje Ekle</a>
            </div>
        </div>
    </div>

</div>

