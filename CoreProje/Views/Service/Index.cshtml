@using EntityLayer.Concrete
@model IList<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @item.ServiceID
                                </th>
                                <td class="budget">
                                    @item.Title
                                </td>
                                <td>
                                    <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-sm btn-danger" id="DeleteBtn"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                                </td>
                                <td>
                                    <a href="/Service/EditService/@item.ServiceID" class="btn btn-sm btn-success">Güncelle</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="container">
                <a href="/Service/AddService/" class="btn btn-primary">+ Hizmet Ekle</a>
            </div>
        </div>
    </div>

</div>