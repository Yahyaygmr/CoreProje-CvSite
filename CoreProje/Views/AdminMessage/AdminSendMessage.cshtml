@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminSendMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="container">
    <form class="form-group" method="post">

        @Html.Label("Konu")
        @Html.TextBoxFor(x=>x.Subject, new {@class = "form-control text-white"})
        <br />
        @Html.Label("Alıcı")
        @Html.TextBoxFor(x=>x.Reciever, new {@class = "form-control text-white"})
        <br />
        @Html.Label("Mesaj")
        @Html.TextAreaFor(x=>x.MessageContent,10,3, new {@class = "form-control text-white"})
        <br />
        <button type="submit" class="btn btn-primary">Gönder</button>
        <button type="reset" class="btn btn-danger">İptal</button>
    </form>
</div>