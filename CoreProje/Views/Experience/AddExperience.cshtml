@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{
    <br />
    @Html.Label("Deneyim Başlığı")
    @Html.TextBoxFor(x=>x.Name, new {@class = "form-control text-white"})
        <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x=>x.Date, new {@class = "form-control text-white"})
        <br />
          @Html.Label("Image Url")
    @Html.TextBoxFor(x=>x.ImageUrl, new {@class = "form-control text-white"})
        <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x=>x.Description,10,3, new {@class = "form-control text-white"})
    <br />
        <button class="btn btn-success">Kaydet</button>
}

