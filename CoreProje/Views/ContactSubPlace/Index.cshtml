@model EntityLayer.Concrete.Contact 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "ContactSubPlace", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.ContactID)
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x=>x.Title, new {@class = "form-control text-white"})
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x=>x.Mail, new {@class = "form-control text-white"})
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x=>x.Phone, new {@class = "form-control text-white"})
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x=>x.Description,6,2, new {@class = "form-control text-white"})
    <br />
    <button class="btn btn-success">Güncelle</button>
}
<script src="~/yeni/template/assets/vendors/js/vendor.bundle.base.js"></script>

